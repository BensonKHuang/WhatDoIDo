<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>movieRec</servlet-name>
        <servlet-class>wdid.Servlets.MovieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>movieRec</servlet-name>
        <url-pattern>/movieRec</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>placeRec</servlet-name>
        <servlet-class>wdid.Servlets.PlaceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>placeRec</servlet-name>
        <url-pattern>/placeRec</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userUpdate</servlet-name>
        <servlet-class>wdid.Servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userUpdate</servlet-name>
        <url-pattern>/userUpdate</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>landing.jsp</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>